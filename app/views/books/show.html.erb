    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format:'jpg', class:"attachment user profile_image fallback", fallback: "no_image.jpg", size:'100x100' %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @book.user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(@book.user)do %>
            <span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></span>
          <% end %>
        </div>
        <h2>New book</h2>
        <%= form_for(@new_book) do |f| %>

          <% if @new_book.errors.any? %>
          <div id="error_explanation">
            <h3><%= pluralize(@new_book.errors.count, "error") %> prohibited this book from being saved:</h3>
            <ul>
              <% @new_book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </div>
          <% end %>

          <div class="field row">
            <label for="book_title">Title</label>
            <%= f.text_field :title, class:"col-xs-12 book_title", id:"book_title" %>
          </div>
          <div class="field row">
            <label for="book_opinion">Opinion</label>
            <%= f.text_area :body, class:"col-xs-12 book_body", id:"book_body" %>
          </div>
          <div class="actions row">
            <%= f.submit "Create Book", class:"btn btn-primary col-xs-12" %>
          </div>
        <% end %>
      </div>
      <div class="col-xs-9">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user) do %>
                  <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format:'jpg', class:"attachment user profile_image fallback", fallback: "no_image.jpg", size:'40x40' %>
                  <br><%= @book.user.name %>
                <% end %>        
              </td>
              <td>
                <%= link_to @book.title, book_path(@book) %>
              </td>
              <td><%= @book.body %></td>
              <td>
                <% if @book.favorited_by?(current_user) %>
                  <%= link_to book_favorites_path(@book), method: :delete, url: book_path(@book) do %>
                    <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                      <%= @book.favorites.count %>
                  <% end %>
                <% else %>
                  <%= link_to book_favorites_path(@book), method: :post, url: book_path(@book) do %>
                    <i class="fa fa-heart" aria-hidden="true"></i>
                    <%= @book.favorites.count %>
                  <% end %>
                <% end %>
              </td>
              <td>
                コメント数：<%= @book.post_comments.count %>
              </td>
              <% if @book.user == current_user %>
                <td>
                  <%= link_to "Edit", edit_book_path(@book), class:"btn-sm btn-success" %>
                </td>
                <td>
                  <%= link_to book_path(@book), method: :delete do %>
                    <span class="btn-sm btn-danger", data-confirm="本当に消しますか？">Destroy</span>
                  <% end %>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
        <table>
          <tbody>
            <% @book.post_comments.each do |post_comment| %>
              <tr>
                <td>
                  <%= attachment_image_tag post_comment.user, :profile_image, :fill, 40, 40, format:'jpg', class:"attachment user profile_image fallback", fallback: "no_image.jpg", size:'40x40' %>
                  <br><%= post_comment.user.name %>
                </td>
                <td><%= post_comment.comment %></td>
                <% if post_comment.user == current_user %>
                  <td>
                    <%= link_to "Destroy", book_post_comment_path(post_comment.book, post_comment), method: :delete, class: "btn btn-danger" %>
                  </td>
                <% end %>
              <tr>
            <% end %>
          </tbody>
        </table>
        <%= form_for [@book, @post_comment] do |f| %>
          <div class="row">
            <div class="col-sm-12">
              <%= f.text_area :comment, rows:'4', class:"form-control" %>
              <%= f.submit "送信", class:"pull-right" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>